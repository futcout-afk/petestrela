rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow writes only for authenticated users (admins) in the pet_profiles folder
    match /pet_profiles/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access for other files if needed, otherwise deny
    match /{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
